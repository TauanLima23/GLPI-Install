docker run \
  --name db-glpi-10 \
  --network glpi \
  -p 3306:3306 \
  -e MYSQL_ROOT_PASSWORD=SENHAROOT \
  -e MYSQL_DATABASE=glpi \
  -e MYSQL_USER=glpi \
  -e MYSQL_PASSWORD=SENHADATABASE \
  -e TZ=America/Sao_Paulo \
  -v /data/glpi-10/percona/lib/:/var/lib/mysql \
  -v /data/glpi-10/percona/log/:/var/log/mysql \
  -v /data/glpi-10/backup/:/backup \
  -d percona/percona-server:8.0 \
  --character-set-server=utf8mb4 \
  --collation-server=utf8mb4_general_ci
